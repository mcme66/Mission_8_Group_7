@model TaskItem

<h1>Tasks</h1>

<form method="post" asp-action="AddEdit" asp-controller="Home" class="container">

    <input type="hidden" asp-for="TaskItemId" />

    <div class="row g-3 align-items-center mb-2">
        <div class="col-12 col-md-2">
            <label asp-for="Task" class="form-label mb-0">Task:</label>
        </div>
        <div class="col-12 col-md-6">
            <input asp-for="Task" class="form-control" />
        </div>
    </div>

    <div class="row g-3 align-items-center mb-2">
        <div class="col-12 col-md-2">
            <label asp-for="DueDate" class="form-label mb-0">Due Date:</label>
        </div>
        <div class="col-12 col-md-4">
            <input asp-for="DueDate" class="form-control" />
        </div>
    </div>

    <div class="row g-3 align-items-center mb-2">
        <div class="col-12 col-md-2">
            <label asp-for="Quadrant" class="form-label mb-0">Quadrant:</label>
        </div>
        <div class="col-12 col-md-4">
            <select asp-for="Quadrant" class="form-select">
                <option value="">Select a quadrant</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
    </div>

    <div class="row g-3 align-items-center mb-2">
        <div class="col-12 col-md-2">
            <label asp-for="CategoryId" class="form-label mb-0">Category</label>
        </div>
        <div class="col-12 col-md-4">
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                <option value="">Select a category</option>
            </select>
        </div>
    </div>

    <div class="row g-3 align-items-center mb-2">
        <div class="col-12 col-md-2">
            <label asp-for="Completed" class="form-label mb-0">Completed</label>
        </div>
        <div class="col-12 col-md-2">
            <select asp-for="Completed" class="form-select">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
        </div>
    </div>

    <div class="row g-3 mt-2">
        <div class="col-12 col-md-8">
            <button type="submit" class="btn btn-primary w-100 w-md-auto">Submit Task</button>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 col-md-8">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>

</form>